@model IEnumerable<Animatch.Models.Animal>

@{
    ViewData["Title"] = "Всички животни";
    var categories = ViewBag.Categories as IEnumerable<Animatch.Models.Category> ?? new List<Animatch.Models.Category>();
    var towns = ViewBag.Towns as IEnumerable<string> ?? new List<string>();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .card {
        transition: none !important;
    }

    .card:hover {
        transform: none !important;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title m-0"> Всички животни</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Добави ново
        </a>
    </div>

    <div class="card mb-4" style="transition: none;">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <input type="text" id="searchInput" class="form-control" placeholder=" Търси по име...">
                </div>
                <div class="col-md-3">
                    <select id="categoryFilter" class="form-select">
                        <option value="">Всички категории</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Name">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="townFilter" class="form-select">
                        <option value="">Всички градове</option>
                        @foreach (var town in towns)
                        {
                            <option value="@town">@town</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="animalsGrid">
        @foreach (var animal in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4 animal-item"
                 data-name="@animal.Name.ToLower()"
                 data-category="@(animal.Category?.Name ?? "")"
                 data-town="@(animal.Town ?? "")">
                <div class="card h-100" style="transition: none;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h4 class="card-title mb-0 text-success">@animal.Name</h4>
                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">@animal.Category?.Name</span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@animal.Id"
                               class="text-success text-decoration-none" title="Редактирай">
                                <i class="bi bi-pencil-fill fs-5"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@animal.Id"
                               class="text-success text-decoration-none ms-2" title="Изтрий">
                                <i class="bi bi-trash3-fill fs-5"></i>
                            </a>
                        </div>

                        <h6 class="card-subtitle mb-3 text-muted">
                            <i class="bi bi-tag-fill text-success me-1"></i> @animal.Species
                            @if (!string.IsNullOrEmpty(animal.Breed))
                            {
                                <span class="text-muted">• @animal.Breed</span>
                            }
                        </h6>

                        @if (!string.IsNullOrEmpty(animal.Town))
                        {
                            <p class="card-text mb-3">
                                <i class="bi bi-geo-alt-fill text-success me-1"></i>
                                <strong>@animal.Town</strong>
                            </p>
                        }

                        <p class="card-text">
                            <small class="text-muted">
                                <i class="bi bi-chat me-1"></i> Търси приятел за игра
                            </small>
                        </p>

                        <p class="card-text text-truncate">@animal.Description</p>
                    </div>
                    <div class="card-footer bg-white border-0 pb-3 px-3">
                        <a asp-action="Details" asp-route-id="@animal.Id"
                           class="btn btn-success w-100 py-2">
                            Детайли
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-5">
            <i class="bi bi-emoji-frown display-1"></i>
            <h3 class="mt-3">Все още няма добавени животни</h3>
            <p>Бъди първият, който добави нов приятел!</p>
            <a asp-action="Create" class="btn btn-success btn-lg mt-3">
                <i class="bi bi-plus-circle"></i> Добави животно
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function applyFilters() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const category = document.getElementById('categoryFilter').value;
            const town = document.getElementById('townFilter').value;

            const animals = document.querySelectorAll('.animal-item');

            animals.forEach(animal => {
                const name = animal.dataset.name;
                const animalCategory = animal.dataset.category;
                const animalTown = animal.dataset.town;

                const matchesSearch = name.includes(searchTerm);
                const matchesCategory = !category || animalCategory === category;
                const matchesTown = !town || animalTown === town;

                if (matchesSearch && matchesCategory && matchesTown) {
                    animal.style.display = 'block';
                } else {
                    animal.style.display = 'none';
                }
            });
        }

        document.getElementById('searchInput').addEventListener('keyup', applyFilters);
        document.getElementById('categoryFilter').addEventListener('change', applyFilters);
        document.getElementById('townFilter').addEventListener('change', applyFilters);

        applyFilters();
    </script>
}