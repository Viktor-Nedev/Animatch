@model Animatch.Models.Animal

@{
    ViewData["Title"] = "Изтрий животно";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h2 class="mb-0 text-center">
                        <i class="bi bi-exclamation-triangle"></i> Изтриване на @Model.Name
                    </h2>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-info-circle"></i>
                        <strong>Внимание!</strong> Това действие е необратимо. Сигурен ли си, че искаш да изтриеш това животно?
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <label class="text-muted fw-bold">Име</label>
                                <h4 class="text-success">@Model.Name</h4>
                            </div>

                            <div class="detail-item mb-3">
                                <label class="text-muted fw-bold">Вид</label>
                                <h5>@Model.Species</h5>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Breed))
                            {
                                <div class="detail-item mb-3">
                                    <label class="text-muted fw-bold">Порода</label>
                                    <h5>@Model.Breed</h5>
                                </div>
                            }
                        </div>

                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.Town))
                            {
                                <div class="detail-item mb-3">
                                    <label class="text-muted fw-bold">Град</label>
                                    <h5>@Model.Town</h5>
                                </div>
                            }

                            <div class="detail-item mb-3">
                                <label class="text-muted fw-bold">Категория</label>
                                <h5><span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">@Model.Category?.Name</span></h5>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="detail-item mb-3">
                                <label class="text-muted fw-bold">Описание</label>
                                <p class="bg-light p-3 rounded">@Model.Description</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash"></i> Да, изтрий
                            </button>
                            <a asp-action="Index" class="btn btn-outline-success btn-lg px-5">
                                <i class="bi bi-arrow-left"></i> Не, назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>